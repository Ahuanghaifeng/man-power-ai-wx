/* miniprogram/pages/index/index.wxss */
.main{
  height: 100vh;
  overflow-y: hidden;
}
.mpa-content{
  padding: 0 20px;
  height: 100vh;
}
.image-target{
  position: absolute;
  top: 0;
  left: 0;
  height: 100vh;
  width: 100vw;
}
.image-target image{
  height: 100vh;
  width: 100vw;
}
.mpa-answer-area{
  /* height: 45vh; */
  position: absolute;
  bottom: 20px;
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
  padding: 10px;
  background: #eee;
  opacity: 0.8;
  border-radius: 20px;
}
.radio-option{
  margin-top: 10px;
  color: #444;
}

.submit{
  padding: 50px 0 0;
}

.menu{
  position: absolute;
  bottom: 20px;
  right: 15px;
}

.menu-item{
  padding-top: 30px;
  text-align: right;
}

.mpa-content-prompt{
  margin-top:5px;
}

.input-form{
  padding: 5px 0 0;
}

.tags{
  margin-top: 15px;
}

.tag{
  background: #bbb;
  padding: 5px 15px;
  border-radius: 15px;
  margin-right: 10px;
  color: #fff;
  opacity: 0.7;
}

.menu-cion{
  box-shadow: 10px 10px 5px #FF0000;
  text-shadow: 10px 10px 5px #FF0000;
  background: yellow;
}