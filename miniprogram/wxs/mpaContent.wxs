module.exports = {
  // 为过长的remarks添加“双击查看”
  cutRemarks: function (remarks, content) {
    var newRemarks = [];
    if (remarks) {
      // 内容头长也要计入数量
      var count = (Math.ceil(content.length / 10) - 1) * 35;
      // console.log(count)
      for (var i = 0; i < remarks.length; i++) {
        var remark = remarks[i];
        if (count + remark.length < 200) {
          newRemarks.push(remark);
          count += remark.length;
        } else {
          newRemarks.push(remark.substring(0, 200 - count) + '...【双击查看完整词条】');
          break;
        }
      }
    }
    return newRemarks;
  },
  filterDult: function(mpaContents){
    var list = []
    var keys = []
    for(var i=0; i<mpaContents.length; i++){
      var item = mpaContents[i]
      if(keys.indexOf(item._id) < 0){
        keys.push(item._id)
        list.push(item)
      }
    }
    return list
  }
}